<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ProfileFragment"
    >
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearPerfil"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylegray_500">
        <FrameLayout android:gravity="start"
            android:id="@+id/frameStackpersonajes"
            android:layout_height="363dp" android:layout_width="match_parent">
            <FrameLayout android:id="@+id/frameStackbackground"
                android:layout_gravity="top|start"
                android:layout_height="255dp"
                android:layout_marginBottom="10dp" android:layout_width="match_parent">
                <ImageView android:id="@+id/imageBackground"
                    android:layout_gravity="start"
                    android:layout_height="255dp"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_background"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_background"/>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbarToolbar"
                    android:layout_gravity="top|center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="23dp"
                    android:layout_width="match_parent" app:contentInsetStart="0dp">
                    <LinearLayout android:id="@+id/linearRowmegaphone"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" android:orientation="horizontal">
                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>
            </FrameLayout>
            <LinearLayout android:id="@+id/linearColumnellipseone"
                android:layout_gravity="bottom|start"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent" android:orientation="vertical">
                <FrameLayout android:gravity="start"
                    android:id="@+id/frameStackusername"
                    android:layout_height="211dp" android:layout_width="match_parent">
                    <LinearLayout android:id="@+id/linearColumnusername"
                        android:layout_gravity="bottom|start"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical" style="@style/groupStylewhite_A700cornerRadius">
                        <EditText android:ellipsize="end"
                            android:id="@+id/txtUsername"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="43dp"
                            android:layout_marginStart="43dp"
                            android:layout_marginTop="70dp"
                            android:layout_width="wrap_content"
                            android:singleLine="true"
                            android:hint="Username"
                            style="@style/txtRobotoromanbold16"/>
                        <EditText android:gravity="center_horizontal"
                            android:id="@+id/txtDescription"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="21dp"
                            android:layout_marginEnd="43dp"
                            android:layout_marginStart="43dp"
                            android:layout_marginTop="22dp"
                            android:layout_width="match_parent"
                            android:hint="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s."
                            style="@style/txtRobotoromanregular12"/>
                    </LinearLayout>
                    <!-- La linea de abajo usa la libreria para redondear la imagen. -->
                    <View
                        android:background="@drawable/rectangle_bg_bluegray_100_border_white_a700_radius_46"
                        android:id="@+id/viewEllipseOne"
                        android:layout_gravity="top|center"
                        android:layout_height="92dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="141dp"
                        android:layout_marginStart="141dp" android:layout_width="92dp"/>
                </FrameLayout>
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearRowpersonajes"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="41dp"
                    android:layout_marginStart="41dp"
                    android:layout_marginTop="19dp"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <LinearLayout android:gravity="end"
                        android:id="@+id/linearColumnpersonajes"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_weight="0.79"
                        android:layout_width="0dp" android:orientation="vertical">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtPersonajes"
                            android:layout_gravity="start"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="151dp"
                            android:layout_width="wrap_content"
                            android:singleLine="true"
                            android:text="Personajes"
                            style="@style/txtRobotomedium16"/>
                        <LinearLayout android:gravity="start"
                            android:id="@+id/linearRowlaptop"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="151dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="1dp"
                            android:layout_width="wrap_content" android:orientation="horizontal">
                            <ImageView android:id="@+id/imageLaptop"
                                android:layout_height="25dp"
                                android:layout_width="18dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_laptop"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_laptop"/>
                            <TextView android:ellipsize="end"
                                android:id="@+id/txtFour"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:layout_marginStart="43dp"
                                android:layout_marginTop="1dp"
                                android:layout_width="wrap_content"
                                android:singleLine="true"
                                android:text="4"
                                style="@style/txtRobotomedium20"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout android:gravity="start"
                        android:id="@+id/linearColumnpartidas"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.21"
                        android:layout_width="0dp" android:orientation="vertical">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtPartidas"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:text="Partidas"
                            style="@style/txtRobotomedium16"/>
                        <LinearLayout android:id="@+id/linearRowuser"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_marginStart="3dp"
                            android:layout_marginTop="1dp"
                            android:layout_width="match_parent" android:orientation="horizontal">
                            <ImageView android:id="@+id/imageUser"
                                android:layout_height="27dp"
                                android:layout_width="30dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_user"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_user"/>
                            <TextView android:ellipsize="end"
                                android:id="@+id/txtOne"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:layout_marginStart="17dp"
                                android:layout_marginTop="3dp"
                                android:layout_weight="0.23"
                                android:layout_width="0dp"
                                android:singleLine="true"
                                android:text="1"
                                style="@style/txtRobotomedium20"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <TextView android:ellipsize="end"
            android:gravity="center_horizontal"
            android:id="@+id/txtSiguientespart"
            android:layout_height="wrap_content"
            android:layout_marginEnd="34dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="37dp"
            android:layout_width="match_parent"
            android:lineSpacingExtra="6dp"
            android:singleLine="true"
            android:text="Siguientes partidas"
            style="@style/txtInterregular24"/>
        <!-- A partir de aqui añadir libreria para el calendario de google -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@color/white"/>


        </LinearLayout>
    </LinearLayout>
</layout>