<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigFragment">
    <LinearLayout
        android:id="@+id/linearColumn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LinearRowChangePassword"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtChangePassword"
                android:layout_width="0dp" android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_weight="0.97"
                android:text="Cambiar contraseña"
                style="@style/txtInterregular20"/>
            <ImageView
                android:layout_width="6dp"
                android:layout_height="14dp"
                android:id="@+id/imgColor"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="125dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LinearRowInformacion"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtInformacion"
                android:layout_width="0dp" android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_weight="0.97"
                android:text="Información"
                style="@style/txtInterregular20"/>
            <ImageView
                android:layout_width="6dp"
                android:layout_height="14dp"
                android:id="@+id/imgColor_one"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="125dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LinearRowPolitics"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtPolitics"
                android:layout_width="0dp" android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_weight="0.97"
                android:text="Términos y condiciones"
                style="@style/txtInterregular20"/>
            <ImageView
                android:layout_width="6dp"
                android:layout_height="14dp"
                android:id="@+id/imgColor_two"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="125dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LinearRowaLogOut"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="80dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtCerrarSession"
                android:layout_width="0dp" android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_weight="0.97"
                android:text="Cerrar sesion"
                style="@style/txtInterregular20_1"/>
            <ImageView
                android:layout_width="6dp"
                android:layout_height="14dp"
                android:id="@+id/imgColorRed"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="190dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_color_red"/>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>