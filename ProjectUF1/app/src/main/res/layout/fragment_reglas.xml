<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigFragment">
    <LinearLayout
        android:id="@+id/linearColumn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">
        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearColumnDescription"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <TextView android:gravity="start"
                android:id="@+id/txtDescription"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam non massa nec sem fermentum porta. Etiam auctor leo et ante euismod, in imperdiet nibh vulputate. Cras aliquam imperdiet orci, ac porttitor lacus fermentum ac. Nulla facilisi. Aliquam erat volutpat. Proin magna massa, fringilla ut gravida nec, pulvinar at felis. Nullam. "
                style="@style/txtInterregular16"/>
        </LinearLayout>


    </LinearLayout>


</FrameLayout>