<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CambiarContrasenaFragment">
    <LinearLayout
        android:id="@+id/linearColumn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNuevaContrasena"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"
            android:layout_marginTop="125dp"
            android:singleLine="true"
            android:text="Nueva contrase単a"
            style="@style/txtRobotomedium20_1"/>
        <EditText
            android:id="@+id/NewPass"
            android:background="@drawable/rectangle_bg_gray_100_radius_31_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contrase単a"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="30dp"
            android:paddingBottom="20dp"
            android:paddingEnd="30dp"
            android:paddingStart="15dp"
            android:paddingTop="20dp"
            android:singleLine="true"
            android:textColorHint="@color/gray_900"
            style="@style/etSolidRounded" tools:ignore="Autofill"/>
        <TextView
            android:id="@+id/txtRepetirContrasena"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"
            android:layout_marginTop="125dp"
            android:singleLine="true"
            android:text="Repetir contrase単a"
            style="@style/txtRobotomedium20_1"/>
        <EditText
            android:id="@+id/RepetNewPass"
            android:background="@drawable/rectangle_bg_gray_100_radius_31_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Repetir contrase単a"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="30dp"
            android:paddingBottom="20dp"
            android:paddingEnd="30dp"
            android:paddingStart="15dp"
            android:paddingTop="20dp"
            android:singleLine="true"
            android:textColorHint="@color/gray_900"
            style="@style/etSolidRounded" tools:ignore="Autofill"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/btnAceptar"
            android:layout_marginEnd="55dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="90dp"
            android:lineSpacingExtra="2dp"
            android:paddingBottom="8dp"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:text="Aceptar"
            style="@style/btnSolidRounded" />

    </LinearLayout>
</FrameLayout>