<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigFragment">
    <LinearLayout
        android:id="@+id/linearColumn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LinearRowChangePassword"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtCrearPersonaje"
                android:layout_width="0dp" android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_weight="0.97"
                android:text="Como crear un personaje"
                style="@style/txtInterregular20"/>
            <ImageView
                android:layout_width="6dp"
                android:layout_height="14dp"
                android:id="@+id/imgColor"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="125dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LinearRowInformacion"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtUnirsePartida"
                style="@style/txtInterregular20"
                android:layout_width="615dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.97"
                android:singleLine="true"
                android:text="Como unirse a una partida" />
            <ImageView
                android:layout_width="6dp"
                android:layout_height="14dp"
                android:id="@+id/imgColor_one"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="125dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LinearRowPolitics"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtCrearPartida"
                android:layout_width="0dp" android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_weight="0.97"
                android:text="Como crear una partida"
                style="@style/txtInterregular20"/>
            <ImageView
                android:layout_width="6dp"
                android:layout_height="14dp"
                android:id="@+id/imgColor_two"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="125dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LinearRowReglas"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtReglas"
                android:layout_width="0dp" android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_weight="0.97"
                android:text="Reglas de DND5e"
                style="@style/txtInterregular20"/>
            <ImageView
                android:layout_width="6dp"
                android:layout_height="14dp"
                android:id="@+id/imgColor_three"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="125dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_color"/>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>