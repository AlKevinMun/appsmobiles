<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos generales"
            android:id="@+id/header_datosgenerales"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/nombre"
            android:textColor="@color/your_color_accent"
            android:textSize="20dp"
            android:layout_margin="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre: "
            android:id="@+id/nombre"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/header_datosgenerales"
            app:layout_constraintBottom_toTopOf="@id/edad"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/elegir_nombre"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/elegir_nombre"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/header_datosgenerales"
            app:layout_constraintBottom_toTopOf="@id/elegir_edad"
            app:layout_constraintLeft_toRightOf="@id/nombre"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad: "
            android:id="@+id/edad"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/nombre"
            app:layout_constraintBottom_toTopOf="@id/alineacion"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/elegir_edad"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/elegir_edad"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/elegir_nombre"
            app:layout_constraintBottom_toTopOf="@id/spinner_alineacion"
            app:layout_constraintLeft_toRightOf="@id/edad"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alineacion: "
            android:id="@+id/alineacion"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/edad"
            app:layout_constraintBottom_toTopOf="@id/raza"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/spinner_alineacion"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_alineacion"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/elegir_edad"
            app:layout_constraintBottom_toTopOf="@id/spinner_raza"
            app:layout_constraintLeft_toRightOf="@id/alineacion"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/your_color_accent"
            android:textSize="16sp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raza: "
            android:id="@+id/raza"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/alineacion"
            app:layout_constraintBottom_toTopOf="@id/deidad"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/spinner_raza"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_raza"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_alineacion"
            app:layout_constraintBottom_toTopOf="@id/spinner_deidad"
            app:layout_constraintLeft_toRightOf="@id/raza"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/your_color_accent"
            android:textSize="16sp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deidad: "
            android:id="@+id/deidad"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/raza"
            app:layout_constraintBottom_toTopOf="@id/clase"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/spinner_deidad"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_deidad"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_raza"
            app:layout_constraintBottom_toTopOf="@id/spinner_clase"
            app:layout_constraintLeft_toRightOf="@id/deidad"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/your_color_accent"
            android:textSize="16sp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clase: "
            android:id="@+id/clase"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/deidad"
            app:layout_constraintBottom_toTopOf="@id/header_datospersonales"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/spinner_clase"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_clase"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_deidad"
            app:layout_constraintBottom_toTopOf="@id/header_datospersonales"
            app:layout_constraintLeft_toRightOf="@id/clase"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/your_color_accent"
            android:textSize="16sp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos personales"
            android:id="@+id/header_datospersonales"
            app:layout_constraintTop_toBottomOf="@id/clase"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/altura"
            android:textColor="@color/your_color_accent"
            android:textSize="20dp"
            android:layout_margin="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Altura: "
            android:id="@+id/altura"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/header_datospersonales"
            app:layout_constraintBottom_toTopOf="@id/genero"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/elegir_altura"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/elegir_altura"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/header_datospersonales"
            app:layout_constraintBottom_toTopOf="@id/spinner_genero"
            app:layout_constraintLeft_toRightOf="@id/altura"
            app:layout_constraintRight_toLeftOf="@id/peso"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso: "
            android:id="@+id/peso"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/header_datospersonales"
            app:layout_constraintBottom_toTopOf="@id/tamano"
            app:layout_constraintLeft_toRightOf="@id/elegir_altura"
            app:layout_constraintRight_toLeftOf="@id/elegir_peso"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/elegir_peso"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/header_datospersonales"
            app:layout_constraintBottom_toTopOf="@id/elegir_tamano"
            app:layout_constraintLeft_toRightOf="@id/peso"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genero: "
            android:id="@+id/genero"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/altura"
            app:layout_constraintBottom_toTopOf="@id/header_estadisticas"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/spinner_genero"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_genero"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/elegir_altura"
            app:layout_constraintBottom_toTopOf="@id/header_estadisticas"
            app:layout_constraintLeft_toRightOf="@id/genero"
            app:layout_constraintRight_toLeftOf="@id/tamano"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tamaño: "
            android:id="@+id/tamano"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/peso"
            app:layout_constraintBottom_toTopOf="@id/header_estadisticas"
            app:layout_constraintLeft_toRightOf="@id/spinner_genero"
            app:layout_constraintRight_toLeftOf="@id/elegir_tamano"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/elegir_tamano"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/elegir_peso"
            app:layout_constraintBottom_toTopOf="@id/header_estadisticas"
            app:layout_constraintLeft_toRightOf="@id/tamano"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estadisticas"
            android:id="@+id/header_estadisticas"
            app:layout_constraintTop_toBottomOf="@id/genero"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fuerza"
            android:textColor="@color/your_color_accent"
            android:textSize="20dp"
            android:layout_margin="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fuerza: "
            android:id="@+id/fuerza"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/header_estadisticas"
            app:layout_constraintBottom_toTopOf="@id/destreza"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/elegir_fuerza"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/elegir_fuerza"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/header_estadisticas"
            app:layout_constraintBottom_toTopOf="@id/elegir_destreza"
            app:layout_constraintLeft_toRightOf="@id/fuerza"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destreza: "
            android:id="@+id/destreza"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/fuerza"
            app:layout_constraintBottom_toTopOf="@id/constitucion"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/elegir_destreza"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/elegir_destreza"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/elegir_fuerza"
            app:layout_constraintBottom_toTopOf="@id/elegir_constitucion"
            app:layout_constraintLeft_toRightOf="@id/destreza"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Constitución: "
            android:id="@+id/constitucion"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/destreza"
            app:layout_constraintBottom_toTopOf="@id/inteligencia"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/elegir_constitucion"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/elegir_constitucion"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/elegir_destreza"
            app:layout_constraintBottom_toTopOf="@id/elegir_inteligencia"
            app:layout_constraintLeft_toRightOf="@id/constitucion"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inteligencia: "
            android:id="@+id/inteligencia"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/constitucion"
            app:layout_constraintBottom_toTopOf="@id/sabiduria"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/elegir_inteligencia"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/elegir_inteligencia"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/elegir_constitucion"
            app:layout_constraintBottom_toTopOf="@id/elegir_sabiduria"
            app:layout_constraintLeft_toRightOf="@id/inteligencia"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sabiduría: "
            android:id="@+id/sabiduria"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/inteligencia"
            app:layout_constraintBottom_toTopOf="@id/carisma"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/elegir_sabiduria"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/elegir_sabiduria"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/elegir_inteligencia"
            app:layout_constraintBottom_toTopOf="@id/elegir_carisma"
            app:layout_constraintLeft_toRightOf="@id/sabiduria"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carisma: "
            android:id="@+id/carisma"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/sabiduria"
            app:layout_constraintBottom_toTopOf="@id/header_aspecto"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/elegir_carisma"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/elegir_carisma"
            android:width="75dp"
            android:height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/elegir_sabiduria"
            app:layout_constraintBottom_toTopOf="@id/header_aspecto"
            app:layout_constraintLeft_toRightOf="@id/carisma"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/your_color_accent"
            android:textSize="16dp"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aspecto"
            android:id="@+id/header_aspecto"
            app:layout_constraintTop_toBottomOf="@id/carisma"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/aspecto"
            android:textColor="@color/your_color_accent"
            android:textSize="20dp"
            android:layout_margin="20dp"/>
        <ImageView
            android:layout_width="800px"
            android:layout_height="800px"
            android:id="@+id/aspecto"
            app:layout_constraintTop_toBottomOf="@id/header_aspecto"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>